<table class="table table-striped table-dark table-hover table-bordered">
  <thead class="thead-dark bg-primary">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td>
            <%= link_to "Edit", edit_user_registration_path(id: user), class: 'mb-3', style: 'color: white;' %>
            <%= link_to "Show", user_path(id: user), style: 'color: white;' %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>