
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { input_html: { class: 'mt-3' } }) do |f| %>
  <div class="offset-3 col-6">
      
    <%= f.error_notification %>
    <h2>Sign up</h2>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" }%>
      <%= f.input :phone_number,
                  required: true,
                  autofocus: true,
                  as: :integer,
                  input_html: { autocomplete: "phone_number", maxlength: 10 }%>
      <%= f.input :avatar,
                  required: true,
                  autofocus: true,
                  as: :file %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      
    </div>


    <div class="form-inputs">
      <%= f.simple_fields_for :address do |address| %>
          <%= address.input :state, collection: CountryStateSelect.collect_states('IN')  %> 
          <%= address.input :street %>
          <%= address.input :pincode, as: :integer  %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: 'offset-5 btn btn-dark mt-3 mb-3' %>
    </div>
    
    <div class="mb-3">
      Back to <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>

