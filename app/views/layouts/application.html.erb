<!DOCTYPE html>
<html>
  <head>
    <title>PostgresRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <div class="container mt-3">
      <% if alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
      <% elsif notice %>  
        <div class="alert alert-success" role="alert">
          <%= notice %>
        </div>
      <% end %>
  
      <div class="text-right mt-3 container" style="display: flex; justify-content: flex-end; align-items: center;">
        <% if user_signed_in? %>
          <span style="margin-right: 10px;">
            <%= 'Hi '+current_user.email %>
          </span>
          <%= link_to "Sign out", destroy_user_session_path, {method: :delete, class: 'btn btn-secondary', style: 'color: white;' } if user_signed_in? %>
        <% end %> 
      </div>

      <%= yield %>
    </div>
  </body>
</html>
